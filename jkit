android:layout_marginStart="248dp"
android:layout_marginTop="200dp"
android:text="Done"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@ id/toggleButton2" />
</androidx.constraintlayout.widget.ConstraintLayout>


JAVA


package com.example.toggleactivity;
import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.Switch;
import android.widget.Toast;
import android.widget.ToggleButton;
public class MainActivity extends AppCompatActivity {
ToggleButton b1,b2;
Switch s1,s2;
Button b;
@Override
protected void onCreate(Bundle savedInstanceState) {
super.onCreate(savedInstanceState);
setContentView(R.layout.activity_main);
onDone();
}
public void onDone(){
b1=findViewById(R.id.toggleButton1);
b2=findViewById(R.id.toggleButton2);
s1=findViewById(R.id.sw1);
s2=findViewById(R.id.sw2);
b=findViewById(R.id.button);
b.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
StringBuilder s=new StringBuilder();
StringBuilder str2=new StringBuilder();
s.append("\nToggle Button One \n" b1.getText());
s.append("\nToggle Button Two \n" b2.getText());
Toast.makeText(getApplicationContext(),s.toString(),Toast.LENGTH_LONG).show();
str2.append("\nSwitch one \n" s1.getText());
str2.append("\nSwitch two " s2.getText());
Toast.makeText(getApplicationContext(),str2.toString(),Toast.LENGTH_LONG).show(
);
}
});
}
}

