JAVA

package com.example.radioactivity;
import androidx.appcompat.app.AppCompatActivity;
import android.annotation.SuppressLint;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.RadioButton;
import android.widget.Toast;
public class MainActivity extends AppCompatActivity {
RadioButton bs,mun,mj,aj,pj,tc,s;
String selected;
Button ok;
@SuppressLint("MissingInflatedId")
@Override
protected void onCreate(Bundle savedInstanceState) {
super.onCreate(savedInstanceState);
setContentView(R.layout.activity_main);
bs=findViewById(R.id.rb1);
mun=findViewById(R.id.rb2);
mj=findViewById(R.id.rb3);
aj=findViewById(R.id.rb4);
pj=findViewById(R.id.rb5);
tc=findViewById(R.id.rb6);
s=findViewById(R.id.rb7);
ok=findViewById(R.id.btn);
ok.setOnClickListener(new View.OnClickListener() {
@Override
public void onClick(View view) {
if(bs.isChecked()){
selected="wow! good to know that you like Biscuits too !!";
}
if(mun.isChecked()){
selected="wow! good to know that you like munch too !!";
}
if(mj.isChecked()){
selected="wow! good to know that you like mango juice too
!!";
}
if(aj.isChecked()){
selected="wow! good to know that you like apple juice too
!!";
}
if(pj.isChecked()){
selected="wow! good to know that you like pineapple juice
too !!";
}
if(tc.isChecked()){
selected="wow! good to know that you like tender coconut too
!!";
}
if(s.isChecked()){
selected="wow! good to know that you like snacks too !!";
}
Toast.makeText(getApplicationContext(),selected,Toast.LENGTH_LONG).show();
}
});
}
}

